# #Desafio 1 Maiúsuclo
nome = str(input("Escreva seu nome completo: "))
nome_maiusculo = nome.upper()
print (nome_maiusculo)

# #Minúsculo
nome = str(input("Escreva seu nome completo: "))
nome_manusculo = nome.lower()
print (nome_manusculo)

# #Nome sem espaço
nome = str(input("Escreva seu nome completo: "))
nome_sem_espaço = nome.replace(" " , "")
print(nome_sem_espaço)


# #Quantas letras tem o primeiro nome
nome = str(input("Escreva seu nome completo: "))
split_nome = nome.split()
print(split_nome[0])
primeiro_nome = (split_nome[0])
print(len(primeiro_nome))



# # Desafio 2
nome_cidade = str(input("Escreva nome da cidade: "))
palavra = "Santo"
encontre_palavra = nome_cidade.find(palavra)
verifica = palavra in nome_cidade
print(f"A palavra {palavra} está em {nome_cidade} : " , verifica)

nome_pessoa = str(input("Escreva nome da pessoa: "))
palavra = "Silva"
encontre_palavra = nome_pessoa.find(palavra)
verifica = palavra in nome_pessoa
print(f"A palavra {palavra} está em {nome_pessoa} : " , verifica)


# #Desafio 4
nome_frase = str(input("Escreva uma frase: "))
qtd_letras_a = nome_frase.count ("a")
print(f"Na frase temos {qtd_letras_a} letras A {nome_frase}")

#Desafio 5
nome_completo = str(input("Escreva seu nome completo: "))
split_nome = nome_completo.split()
primeiro_nome = (split_nome[0])
ultimo_nome = (split_nome[-1])
print(f"Primeiro Nome: {primeiro_nome} \n Último Nome: {ultimo_nome}")